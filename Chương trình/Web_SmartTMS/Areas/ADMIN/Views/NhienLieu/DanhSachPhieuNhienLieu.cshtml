@{
    ViewBag.Title = "Danh sách phiếu nhiên liệu";
    Layout = "~/Areas/ADMIN/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f0f2f5;
        margin: 0;
        padding: 0;
    }

    h2 {
        color: #333;
        font-size: 28px;
        margin-bottom: 20px;
    }

    .grid-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        padding: 20px;
    }

    .card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        padding: 20px;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

        .card h3 {
            font-size: 20px;
            color: #007bff;
            margin-top: 0;
            margin-bottom: 10px;
        }

            .card h3 a {
                text-decoration: none;
                color: #007bff;
            }

                .card h3 a:hover {
                    text-decoration: underline;
                }

        .card p {
            font-size: 14px;
            color: #555;
            margin: 5px 0;
        }

    .highlight {
        color: #333;
        font-weight: bold;
    }
</style>

<h2 style="text-align: center;">Danh sách phiếu nhiên liệu</h2>

<div class="grid-container">
    @foreach (var item in Model)
    {
        <div class="card">
            <h3>
                <a href="@Url.Action("Edit", "NhienLieu", new { area = "ADMIN", id = item.MaNL })">
                    Mã phiếu: <span class="highlight">@item.MaNL</span>
                </a>
            </h3>
            <p><span class="highlight">Phương tiện:</span> @item.MaPT</p>
            <p><span class="highlight">Tài xế:</span> @item.MaTX</p>
            <p><span class="highlight">Thời gian nạp:</span> @item.ThoiGian.ToString("dd/MM/yyyy HH:mm")</p>
            <p><span class="highlight">Km lúc nạp:</span> @item.KmNapLai</p>
            <p><span class="highlight">Lượng nạp vào:</span> @item.LuongNapVao L</p>
            <p><span class="highlight">Đơn giá:</span> @item.DonGia VND/L</p>
            <p><span class="highlight">Thành tiền:</span> @item.ThanhTien VND</p>
            <p><span class="highlight">Trạm xăng:</span> @item.TramXang</p>
            <p><span class="highlight">Ghi chú:</span> @item.GhiChu</p>
        </div>
    }
</div>
