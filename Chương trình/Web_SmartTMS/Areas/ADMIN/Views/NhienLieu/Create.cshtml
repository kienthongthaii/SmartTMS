@model Model.EF.NHIENLIEU

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/ADMIN/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
    }

    .card {
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        overflow: hidden;
        background-color: #ffffff;
    }

    .card-header {
        background-color: #007bff;
        color: white;
        padding: 20px;
        font-size: 18px;
        text-align: center;
        font-weight: bold;
    }

    .card-body {
        padding: 30px;
    }

    h4 {
        color: #343a40;
        font-size: 22px;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .control-label {
        font-weight: bold;
        color: #6c757d;
        font-size: 14px;
        margin-bottom: 5px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ced4da;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .text-danger {
        color: #dc3545;
        font-size: 12px;
    }

    .btn {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .btn:hover {
            background-color: #0056b3;
        }
</style>

<div class="row justify-content-center">
    <div class="col-lg-5">
        <div class="card border-1 rounded-lg mt-5">
            <div class="card-header"><h3 class="text-center font-weight-light my-4">PHIẾU CHI NHIÊN LIỆU</h3></div>
            <div class="card-body">
                @using (Html.BeginForm("Create", "NhienLieu", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Thông tin phiếu chi nhiên liệu</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <label class="control-label">Tài xế</label>
                        @Html.DropDownList("MaTX", ViewBag.MaTX as SelectList, "Chọn tài xế", new { @class = "form-control", id = "MaTX" })
                        @Html.ValidationMessageFor(model => model.MaTX, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label class="control-label">Phương tiện</label>
                        @Html.DropDownList("MaPT", ViewBag.MaPT as SelectList, "Chọn phương tiện", new { @class = "form-control", id = "MaPT" })
                        @Html.ValidationMessageFor(model => model.MaPT, "", new { @class = "text-danger" })
                    </div>


                    <div class="form-group">
                        @Html.Label("Thời Gian", htmlAttributes: new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.ThoiGian, new { @class = "form-control", @type = "datetime-local" })
                        @Html.ValidationMessageFor(model => model.ThoiGian, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.Label("Km Nạp Lại", htmlAttributes: new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.KmNapLai, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.KmNapLai, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.Label("Lượng Nạp Vào", htmlAttributes: new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.LuongNapVao, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.LuongNapVao, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.Label("Đơn Giá", htmlAttributes: new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.DonGia, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.Label("Trạm Xăng", htmlAttributes: new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.TramXang, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TramXang, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.Label("Ghi Chú", htmlAttributes: new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.GhiChu, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn">Gửi Phiếu</button>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</div>

<div style="text-align: center; margin-top: 20px;">
    @Html.ActionLink("Back to List", "Index", "NhienLieu", new { area = "ADMIN" }, new { @class = "modern-link" })
</div>

<style>
    .modern-link {
        font-size: 16px;
        font-weight: bold;
        color: #007bff;
        text-decoration: none;
        padding: 10px 15px;
        border: 2px solid #007bff;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .modern-link:hover {
            background-color: #007bff;
            color: white;
        }
</style>
