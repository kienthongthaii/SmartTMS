            <script>
                function getMSNWeather() {
                    if (navigator.geolocation) {
                        navigator.geolocation.getCurrentPosition(
                            function (position) {
                                const latitude = position.coords.latitude;
                                const longitude = position.coords.longitude;

                                // Chuyển hướng đến MSN Weather với tọa độ hiện tại
                                const weatherUrl = `https://www.msn.com/en-us/weather/forecast?lat=${latitude}&lon=${longitude}`;
                                window.location.href = weatherUrl;
                            },
                            function (error) {
                                alert("Không thể lấy vị trí hiện tại. Vui lòng kiểm tra cài đặt trình duyệt.");
                            }
                        );
                    } else {
                        alert("Trình duyệt của bạn không hỗ trợ lấy vị trí.");
                    }
                }
