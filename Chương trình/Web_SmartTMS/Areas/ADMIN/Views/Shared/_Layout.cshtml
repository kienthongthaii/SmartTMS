<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Gọi API để lấy họ tên
        fetch('@Url.Action("GetHoTen", "Home")')
            .then(response => response.text())
            .then(data => {
                const message = document.getElementById("welcomeMessage");
                message.textContent = "Xin chào, " + data + ", chúc bạn có một ngày làm việc hiệu quả tại SmartTMS!";

                // Hiệu ứng chạy từ phải qua trái
                let position = window.innerWidth;
                const speed = 2; // Tốc độ di chuyển
                function moveMessage() {
                    position -= speed;
                    if (position + message.offsetWidth < 0) {
                        position = window.innerWidth;
                    }
                    message.style.transform = `translateX(${position}px)`;
                    requestAnimationFrame(moveMessage);
                }
                moveMessage();
            })
            .catch(() => {
                const message = document.getElementById("welcomeMessage");
                message.textContent = "Xin chào, Khách";
            });
    });
    // Hiển thị popup khi nhấn "Khóa tài khoản"
    document.getElementById('btnLockAccount').addEventListener('click', function () {
        const lockAccountModal = new bootstrap.Modal(document.getElementById('lockAccountModal'), {});
        lockAccountModal.show();
    });

    // Xử lý khi nhấn "Xác nhận khóa tài khoản"
    document.getElementById('confirmLockAccount').addEventListener('click', function () {
        fetch('/ADMIN/Home/LockAccount', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ userId: 'currentUserId' }), // Thay "currentUserId" bằng logic để lấy ID tài khoản hiện tại
        })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Tài khoản đã bị khóa. Vui lòng liên hệ phòng Nhân Sự để mở khóa.');
                    location.href = '/ADMIN/Login'; // Chuyển về trang đăng nhập
                } else {
                    alert('Lỗi: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Có lỗi xảy ra. Vui lòng thử lại sau.');
            });
    });
    

</script>

